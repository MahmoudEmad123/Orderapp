            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:shadowColor="#000"
            android:background="@color/btnSignUp"
            android:layout_margin="16dp"

            />

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
